<Window x:Class="ProviderView.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProviderView"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="343*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Height="250" Margin="20,20,20,14" Grid.ColumnSpan="2">
            <Label Content="Логин (почта):" Margin="0, 30, 0, 0"/>
            <TextBox x:Name="TextBoxLogin" Height="25"/>
            <Label Content="Пароль:"/>
            <TextBox x:Name="TextBoxPassword" Height="25"/>
            <Button Content="Войти" Margin="0, 20, 0, 0" Click="SignIn_Click"/>
            <Button Content="Зарегистрироваться" Margin="0, 20, 0, 0" Click="ToSignUp_Click"/>
        </StackPanel>
    </Grid>
</Window>

